

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

<div class="large-3 large-centered columns">
  <div class="login-box">
  <div class="row">
  <div class="large-12 columns">
       <div class="row">
         <div class="large-12 columns">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, :placeholder => "Enter Email" %>
          </div>
       </div>
      <div class="row">
        <div class="large-12 large-centered columns">
          <%= f.submit "Send Reset Password Instructions", :class => "button expand" %>
          <%= link_to "Register Now", new_registration_path(resource_name), :class => "button tiny success expand" %>
          <%= link_to "Back", :back, :class => "button tiny expand" %>
          <%= link_to "Forgot Password", new_password_path(resource_name), :class => "button tiny alert expand" %>
        </div>
      </div>
    </form>
  </div>
</div>
</div>
</div>
<% end %>

