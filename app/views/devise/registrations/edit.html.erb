<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :multipart => true }) do |f| %>
  <%= devise_error_messages! %>


<form>
<div class="large-8 large-centered columns">
  <div class="login-box">
  <div class="row">
  <div class="large-12 columns">
    <form>
       <div class="row">
         <div class="large-12 columns">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, :placeholder => "Enter Email" %>
          </div>
       </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


      <div class="row">
         <div class="large-12 columns">
            <%= f.label :password %> <i><font color="999999">(leave blank if you don't want to change it)</font></i>
            <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter New Password" %>
         </div>
      </div>
      <div class="row">
         <div class="large-12 columns">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm New Password" %>
        </div>
      </div>
      <div class="row">
         <div class="large-12 columns">
    <%= f.label :current_password %> <i><font color="999999">(we need your current password to confirm your changes)</font></i>
    <%= f.password_field :current_password, autocomplete: "off", :placeholder => "Confirm Current Password" %>
        </div>
      </div>


      <div class="row">
         <div class="large-12 columns">

          <font color="008CBA"><%= f.file_field :avatar %></font>

   <div class="row">
    <div class="large-4 columns">

          <%= f.label :Name %>
          <%= f.text_field :name, :placeholder => "Enter Name" %>

    </div>
    <div class="large-4 columns">
      <div class="row collapse">
        <label>Weight</label>
        <div class="small-9 columns">
         <!--  HAD TO USE RAW HTML BELOW ONCE -->
          <input type="text" name="user[weight]" id="user_name" placeholder="Enter Weight" />
          <!-- END -->
        </div>
        <div class="small-3 columns">
          <span class="postfix">lbs</span>
        </div>
      </div>
    </div>
  <div class="row">
    <div class="large-4 columns">
      <label>Age
        <br>
          <%= f.select( :age, (18..99).to_a) %>
      </label>
    </div>
  </div>
    <div class="large-4 columns">
          <%= f.label :Height %>
          <%= f.text_field :height, :placeholder => "Enter Height" %>
    </div>
    <div class="large-4 columns">

        <%= f.label :Weight_goal %>
        <%= f.text_field :weight_goal, :placeholder => "Enter Weight Goal" %>

    </div>
    <div class="large-4 columns">
      <label>Gender
      <%= f.select :sex, [['Male','Male'],['Female','Female'], ['Other','Other']] %>
      </label>
    </div>
  </div>
  <div class='row'>
      <div class="large-4 columns">
          <label>Daily Protien Intake<br>(Leave blank if unknown)</label>
          <%= f.text_field :d_protein_r, :placeholder => "Enter Proteins" %>
    </div>
    <div class="large-4 columns">

        <label>Daily Fat Intake<br>(Leave blank if unknown)</label>
        <%= f.text_field :d_carb_r, :placeholder => "Enter Carbs" %>

    </div>
    <div class="large-4 columns">

        <label>Daily Carb Intake<br>(Leave blank if unknown)</label>
        <%= f.text_field :d_fat_r, :placeholder => "Enter Fats" %>

    </div>
  </div>

  <br><br>

        <br><br>

      <div class="row">
        <div class="large-5 large-centered columns">
          <%= f.submit "Update", :class => "button success expand" %>
          <%= link_to "Back", user_path(current_user), :class => "button tiny expand" %>
          <%= link_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "button tiny alert expand" %>
        </div>
      </div>
    </form>
  </div>
</div>
</div>
</div>






</form>





<% end %>



