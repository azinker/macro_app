
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<form>
<div class="large-4 large-centered columns">
  <div class="login-box">
  <div class="row">
  <div class="large-12 columns">
       <div class="row">
         <div class="large-12 columns">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, :placeholder => "Enter Email" %>
          </div>
       </div>
      <div class="row">
         <div class="large-12 columns">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter Password" %>
         </div>
      </div>
            <div class="row">
         <div class="large-12 columns">
          <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          <% end -%>
        </div>
      </div>
      <div class="row">
        <div class="large-12 large-centered columns">
          <%= f.submit "Log in", :class => "button expand" %>
          <%= link_to "Register Now", new_registration_path(resource_name), :class => "button tiny success expand" %>
          <%= link_to "Forgot Password", new_password_path(resource_name), :class => "button tiny alert expand" %>
          <%= link_to "Resend Confirmation", new_confirmation_path(resource_name), :class => "button tiny info expand" %>
        </div>
      </div>
    </form>
  </div>
</div>
</div>
</div>






</form>




<% end %><br>




